#include <iostream>
#include <string>
#include <algorithm>
using namespace std;
 
bool palindrome(int n) {
    string binary = "";
    while (n > 0) {
        binary += (n % 2) + '0';
        n /= 2;
    }
    string reversed = binary;
    reverse(reversed.begin(), reversed.end());
    return binary == reversed;
}
bool iswonderful(int n) {
    if ((n % 2 == 1) && palindrome(n))
    {
        return true;
    }
    else
    return false;
}
 
int main() {
    int n;
    cin >> n;
    if (iswonderful(n)) {
        cout << "YES" << endl;
    } else {
        cout << "NO" << endl;
    }
    return 0;
}
